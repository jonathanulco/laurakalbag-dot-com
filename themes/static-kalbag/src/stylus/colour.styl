// Plug colour variables into here

&
	background $secondary-bg
	color $text

a
	color $linktext
	text-decoration underline 
	text-decoration-color $brilliant
	-webkit-text-decoration-color $brilliant

	&:hover, &:active
		color $linktext
		text-decoration underline 
		text-decoration-color $brilliant
		-webkit-text-decoration-color $brilliant
		transition 0.2s

p a:hover, ul a:hover, ol a:hover, figcaption a:hover
	color darken($brilliant, .2)

h1 a, h2 a, h3 a, figure a, figure a:hover
	color $text

.site-title
	a
		background $secondary-bg
		color $text
		text-decoration none

.site-footer
	background $secondary-bg

hr
	border $brilliant dashed 0.1em
	margin 2em 0

// invert colours for code

pre
	background $text

	code
		color $primary-bg

.navigation-menu
	ul
		background alpha($tab-five, 0.1)
		li
			background $secondary-bg

.navigation-menu
	background alpha($tab-five, 0.1)

	// set active navigation link background colour
	li.active a
		background alpha($primary-bg, 0.5)
		color $text

&.blog
	// set active navigation link background colour
	.navigation-menu li a[href="/posts/"]
		background $primary-bg

&.notes
	// set active navigation link background colour
	.navigation-menu li a[href="/latest/"]
		background $primary-bg

&.photos
	// set active navigation link background colour
	.navigation-menu li a[href="/latest/"]
		background $primary-bg

&.kind-404
	// set active navigation link background colour
	.navigation-menu li a[href="/"]
		background $primary-bg

